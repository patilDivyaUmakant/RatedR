  <style>
    #header{
      width: 100%;
      height: 60vh;
      background-image: url('/images/abt.jpg');
      background-attachment: fixed;
      background-position: bottom;
      background-size: cover;
      position: relative;
      /* background-color: yellow; */
  }
  h1{
      position:absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%,-50%);
      font-size: 45px;
      color: white;
      font-weight: 400;
      letter-spacing: 2px;
  }
  #about{
      width: 100%;
      height: 80vh;
      display: flex;
      padding: 5% 7%;
  
  }
  #aboutContent{
      width: 50%;
      height: 100%;
      padding-right: 50px;
      /* background-color: yellow; */
  }
  #aboutImage{
      width: 50%;
      height: 100%;
      background-image: url('/images/singer.jpg');
      background-size: cover;
      background-position: center;
  }
  h2{
      font-weight: 700;
      font-size: 45px;
  }
  h2 span{
      font-weight: 400;
  }
  p{
      font-family: 'Montserrat';
      color: grey;
      margin-top: 40px;
  }
  #rated{
      color:#AF2727 ;
  
  }
  
  button{
      padding: 18px 50px;
      background-color: #AF2727;
      color:white;
      border-radius: 5px;
      border: none;
      margin-top: 20px;
  }
  </style>

  <style>
    #gallery{
    width: 100%;
    min-height: 80vh;
    display: flex;
    flex-wrap: wrap;
    padding: 3% 8%;
    justify-content: space-between;
}
.card{
    width: 400px;
    min-height: 350px;
    background-color: yellow;
    margin: 30px 0;
    background-image: url('/images/singer.jpg');
    background-position: center;
    background-size: cover;
}

.card:nth-child(1){
    background-image: url('/images/1.jpg');
}
.card:nth-child(2){
    background-image: url('/images/2.jpg');
}
.card:nth-child(3){
    background-image: url('/images/3.jpg');
}
.card:nth-child(4){
    background-image: url('/images/4.jpg');
}
.card:nth-child(5){
    background-image: url('/images/5.jpg');
}
.card:nth-child(6){
    background-image: url('/images/6.jpg');
}
footer{
    height: 20vh;
    width: 100%;
    background-color: rgb(41, 41, 41);
    display: flex;
    align-items: center;
    justify-content: center;
    }
  </style>

  <style>
    #header{
    width: 100%;
    height: 15vh;
}
#contact{
    height: 85vh;
    width: 100%;
    background-image: url('/images/contact.jpg');
    background-size: cover;
    background-position: center;
    display: flex;
    /* background-image: linear-gradient(to bottom,transparent,black); */
}

#contactOverlay{
    height: 100%;
    width: 100%;
    background: linear-gradient(to bottom,#020405,#010102f6,#030405ea,#050708f8,#070a0cd0);
    display: flex;
    justify-content: center;
    align-items: center;
}
#form{
    margin-top: 50px;
    width: 420px;
    height: 500px;
    /* border: solid white 1px; */
    /* background-color: yellow; */
    text-align: center;
   color: white;
   font-family: 'montserrat';
   
}
#form form{
    text-align: left;
    margin-top: 40px;
}
#form h2{
    font-weight: 600;
}

input[type="text"],[type="email"],[type="number"]{
    display: block;
    width: 100%;
    height: 40px;
    background-color: transparent;
    border: none;
    border-bottom: solid 1px grey;
    outline: none;
    color: white;
    margin: 20px 0;

}
input[type="submit"]{
    height: 50px;
    width: 100%;
  background-color: transparent;
  border: solid 1px;
  border-image-slice: 8;
border-width: 3px;
color: white;
margin: 30px 0;

letter-spacing: 4px;

border-image-source: linear-gradient(to left, #c832db, #ec3a3a);
}
small{
    color: grey;
    margin-left: 15px;
}
::placeholder{
    color: rgba(255, 255, 255, 0.562);
    font-size: 14px;
}

input[type="submit"]:hover{
border-image-source: linear-gradient(to right, #c832db, #ec3a3a);
font-weight: 500;
cursor: pointer;
}
.end{
    text-align: center;
    color: white;
    font-size: 20px;
  }
  </style>



